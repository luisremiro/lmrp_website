	title = {{POLARISATION} {IN} {THE} {ASSESSMENT} {OF} {THE} {SPANISH} {ARMED} {FORCES}: {TERRITORIAL} {IDENTITY} {AND} {POLITICAL} {IDEOLOGY}},
